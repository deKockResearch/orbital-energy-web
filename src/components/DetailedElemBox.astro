---
// id used to keep the detailed element box ids unique in the multiple tabs.
const { id, selectableRow } = Astro.props;

// Some displays of element box support selecting of the entire row. Some do not.
// When the entire is selectable, the details box functionalty changes.
const selRow = selectableRow === "true";
---

<div class="detailedView" id={id + "-details"}>
  <div class="detailsTempText">
    <p>
      {
        selRow ? (
          <p>Select an element or an entire row from the periodic table</p>
        ) : (
          <p>Select an element from the periodic table for more details</p>
        )
      }
    </p>
  </div>
  <!-- the following is hidden until an element is selected -->
  <div class="detailsElemBox showcase" style="display: none">
    <div class="rowSelectedInfo"></div>
    <div class="aNumber"></div>
    <div class="aSymbol"></div>
    <div class="aName"></div>
    <div class="aMass"></div>
    <div class="aEconfig"></div>
  </div>
</div>
<script>
  import "../scripts/detailedElemBox";
</script>

<style>
  .showcase {
    text-align: center;
    color: black;
    box-sizing: border-box;
    border-radius: 3px;
    border-width: 1px;
    border-style: solid;
    border-color: black;
    text-decoration: none;
    aspect-ratio: 1;
  }

  .detailedView {
    padding: 4%;
    width: 20%;
    display: inline-block;
    font-family: "Times New Roman", Times, serif;
    .aNumber {
      font-size: 2.4vw;
      margin-top: 7%;
    }
    .aName {
      font-size: 2.5vw;
      margin: 2%;
    }
    .aSymbol {
      font-size: 4vw;
      font-weight: bold;
      margin: 2%;
    }
    .aMass {
      font-size: 2vw;
      margin: 2%;
    }
    .aEconfig {
      font-size: 1.2vw;
      margin: 2%;
    }
    .rowSelectedInfo {
      font-size: 2vw;
      margin: 2%;
    }
  }
  .detailedViewRowSelected {
    background-color: #f0f0f0;
  }
</style>
