            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>
          <tr class="ion-energy-t_i-row ion-energy-details-row">
            <th>t<sub>i</sub></th>
            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>
          <tr class="ion-energy-v_en-row fat-bottom-sep ion-energy-details-row">
            <th>v<sub>en</sub></th>
            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>

          <tr class="ion-energy-v_ee-row ion-energy-details-row">
            <th>v<sub>ee</sub> 1s</th>
            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>
          <tr class="ion-energy-v_ee-row ion-energy-details-row">
            <th>v<sub>ee</sub> 2s</th>
            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>
          <tr class="ion-energy-v_ee-row ion-energy-details-row">
            <th>v<sub>ee</sub> 2p</th>
            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>
          <tr class="ion-energy-v_ee-row ion-energy-details-row">
            <th>v<sub>ee</sub> 3s</th>
            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>
          <tr class="ion-energy-v_ee-row fat-bottom-sep ion-energy-details-row">
            <th>v<sub>ee</sub> 3p</th>
            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>

          <tr class="ion-energy-capv_ee-row ion-energy-details-row">
            <th>V<sub>ee</sub> 1s</th>
            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>
          <tr class="ion-energy-capv_ee-row ion-energy-details-row">
            <th>V<sub>ee</sub> 2s</th>
            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>
          <tr class="ion-energy-capv_ee-row ion-energy-details-row">
            <th>V<sub>ee</sub> 2p</th>
            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>
          <tr class="ion-energy-capv_ee-row ion-energy-details-row">
            <th>V<sub>ee</sub> 3s</th>
            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>
          <tr
            class="ion-energy-capv_ee-row fat-bottom-sep ion-energy-details-row"
          >
            <th>V<sub>ee</sub> 3p</th>
            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>
          <tr class="ion-energy-vaoe-row">
            <th>VAOE</th>
            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>
          <tr class="ion-energy-et-row">
            <th>E<sub>t</sub></th>
            <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
          </tr>
        </tbody>
      </table>
      Total Energy: <span id="ion-energy-total-energy"></span>
      <!-- <div class="ion-energy-diff">
        Ionization Energy: <span id="ion-energy-ionization-energy"></span>
      </div> -->
    </div>
  </div>

  <div id="ionizationTotalCanvasAttachPoint"></div>

  <script>
    import "../scripts/ionizationEnergy";
  </script>

  <style>
    td,
    th {
      padding-left: 2px;
      padding-right: 2px;
    }
    .fat-bottom-sep {
      border-bottom: 2px solid black;
    }

    .ion-energy-area {
      display: flex;
      flex-direction: row;
      gap: 1rem;
    }

    .ion-energy-econfig-row {
      text-align: center;
    }
    .ion-energy-diff {
      color: red;
    }

    #ion-energy-toggle-details-btn {
      margin-bottom: 1rem;
    }

    .ion-energy-details-row {
      display: none;
    }

    .table-label {
      font-size: 1.5rem;
      font-weight: bold;
    }

    canvas {
      margin-bottom: 50px;
      width: 800px;
      height: 300px;
    }
  </style>
</TabLayout>
