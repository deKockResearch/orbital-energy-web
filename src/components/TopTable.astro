<style is:global>
  .wrapper {
    display: flex;
    flex-direction: column;
  }

  .innerTop {
    display: flex;
    flex-direction: row;
  }

  .elements {
    font-size: 1.15vw;
    width: 70%;
    float: left;
  }

  .not-clickable {
    color: transparent;
    filter: opacity(20%);
  }

  .key {
    display: none;
  }

  .row {
    display: flex;
    text-align: center;
    justify-content: space-around;
  }

  .f-block .row {
    justify-content: flex-end;
  }

  .element {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 5vw; /* NOT CORRECT */
    color: black;
    box-sizing: border-box;
    border-radius: 3px;
    border-width: 1px;
    border-style: solid;
    border-color: black;
    margin: 1px;
    text-decoration: none;
    transition:
      background-color 0.2s,
      transform 0.2s;
    aspect-ratio: 1;
  }

  .element.ptable:hover {
    box-shadow: 2px 2px 5px;
    transform: scale(1.1);
  }

  .element.clicked {
    box-shadow: 2px 2px 5px;
    transform: scale(1.2);
  }

  .empty-element {
    border-style: none;
  }

  .group-12 {
    background-color: #6480ba;
  }

  .group-12.ptable:hover {
    transform: scale(1.1);
    background-color: #6699ff;
  }

  .description.group-base {
    background-color: rgba(225, 170, 173, 0.5);
  }

  .description.group-base.ptable:hover {
    background-color: rgba(212, 132, 137, 0.8);
  }

  .key li.group-base:before {
    background-color: #d48489;
  }

  .hover-group-base .element {
    opacity: 0.5;
  }

  .hover-group-base .element.group-base {
    opacity: 1;
  }

  .group-transition {
    background-color: #eb4848;
  }

  .group-transition.ptable:hover {
    background-color: #f86c6c;
  }

  .group-nm {
    background-color: #ffcc00;
  }

  .group-nm.ptable:hover {
    background-color: #e1deaa;
  }

  .group-la {
    background-color: #00cc33;
  }

  .group-la.ptable:hover {
    background-color: #d7e1aa;
