  .pc-tab {
    width: 100%;
    max-width: 700px;
    margin: 0 auto;
  }

  .pc-tab ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .pc-tab ul li label {
    font-family: "Raleway";
    float: left;
    padding: 15px 25px;
    border: 1px solid #ddd;
    border-bottom: 0;
    background: #eeeeee;
    color: #444;
  }

  .pc-tab ul li label:hover {
    background: #dddddd;
  }

  .pc-tab ul li label:active {
    background: #ffffff;
  }

  .pc-tab ul li:not(:last-child) label {
    border-right-width: 0;
  }

  .pc-tab section {
    font-family: "Droid Serif";
    clear: both;
  }

  .pc-tab section div {
    padding: 20px;
    width: 100%;
    border: 1px solid #ddd;
    background: #fff;
    line-height: 1.5em;
    letter-spacing: 0.3px;
    color: #444;
  }

  .pc-tab section div h2 {
    margin: 0;
    font-family: "Raleway";
    letter-spacing: 1px;
    color: #34495e;
  }

