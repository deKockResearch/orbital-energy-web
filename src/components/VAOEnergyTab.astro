---
import TabLayout from "../layouts/TabLayout.astro";
import { dynamic23Matrix, faussurierMatrix } from "../scripts/matrices";
import ElementsTable from "./ElementsTable.astro";
import Matrix from "./Matrix.astro";
import SelectableMatrix from "./SelectableMatrix.astro";
---

<TabLayout tabName="Energies" id="vaoenergy-tab" isActive="true">
  <div id="matrices" class="horizontal-flex">
    <Matrix id="dynamic23" matrix={dynamic23Matrix} />
    <Matrix id="faussurier" matrix={faussurierMatrix} />
    <SelectableMatrix />
  </div>

  <!-- next element is where canvas gets attached -->
  <div id="eLevelsID"></div>

  <h4>Total:</h4>
  <div id="totalEnergies" class="horizontal-flex">
    <span id="dynamic23TotalEnergy"></span>
    <span id="faussurierTotalEnergy"></span>
    <span id="selectableTotalEnergy"></span>
  </div>
  <h4>tvTable</h4>
  <div id="tvTables" class="horizontal-flex">
    <table id="dynamic23TvTable"></table>
    <table id="faussurierTvTable"></table>
    <table id="selectableTvTable"></table>
  </div>
  <h4>vijTable</h4>
  <div id="vijTables" class="horizontal-flex">
    <table id="dynamic23VijTable"></table>
    <table id="faussurierVijTable"></table>
    <table id="selectableVijTable"></table>
  </div>
</TabLayout>

<script>
  import "../scripts/vaoEnergyTab";
  import "../scripts/energyTables";
  import "../scripts/energyDiagramsDisplay";
</script>
